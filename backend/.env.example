# Backend Configuration
PORT=3000
# Server host - use 0.0.0.0 to listen on all interfaces (for remote access)
HOST=0.0.0.0

# Database Configuration
DB_PATH=./data/sd-cpp-studio.db
IMAGES_DIR=./data/images

# Model Configuration
MODELS_DIR=../models

# HuggingFace Configuration
# Get your token from: https://huggingface.co/settings/tokens
HF_TOKEN=

# HuggingFace Hub Cache Directory (Python huggingface_hub)
# This is where Python's hf_hub_download will cache files
HF_HOME=../models/hf_cache
HF_HUB_CACHE=../models/hf_cache/hub
# Or use the legacy HUGGINGFACE_HUB_CACHE
HUGGINGFACE_HUB_CACHE=../models/hf_cache/hub

# Fallback Node.js cache directory
NODE_HF_CACHE=../models/hf_cache/node

# Model Download Configuration
DOWNLOAD_MAX_RETRIES=3
DOWNLOAD_TIMEOUT=300000
DOWNLOAD_CHUNK_SIZE=10485760

# Python executable path (auto-detected if not set)
# PYTHON=python3

# Use Python downloader first (recommended), falls back to Node.js if Python unavailable
USE_PYTHON_DOWNLOADER=true

# Debug Mode
DEBUG=false
NODE_ENV=development

# Logging Configuration
# Log level: trace, debug, info, warn, error, fatal (default: info)
LOG_LEVEL=info
# Enable HTTP API request/response logging (default: true)
LOG_API_CALLS=true
# Enable CLI command execution logging (default: true)
LOG_CLI_CALLS=true

# Allowed Hosts for Frontend Dev Server (Vite)
# Comma-separated list of allowed hostnames for the Vite dev server
# Example: studio.rscx.ru,.rscx.ru,localhost,.localhost
# Use 'all' to allow any host (not recommended for production)
ALLOWED_HOSTS=all

# API Key Authentication
# If set, requires API key authentication for protected endpoints
# Leave empty to disable authentication (default: open access)
#
# When set, clients must provide the API key using one of these headers:
#   Authorization: Bearer <API_KEY>
#   X-Api-Key: <API_KEY>
#
# Protected endpoints include:
#   - All POST/DELETE operations
#   - /api/generations/*, /api/queue/*, /api/images/*
#   - /api/models/running, /api/models/downloaded, /api/models/:id
#
# Public endpoints (no authentication required):
#   - /api/health, /api/config
#   - /api/models (model discovery)
#   - /sdapi/v1/* (SD.next compatibility endpoints)
API_KEY=
